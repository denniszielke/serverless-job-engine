// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\b\\B",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Scanning for projects...",
						"endsPattern": "(^.*Quarkus .* started in .*\\.)|(^.* ERROR .* Failed to start)"
					}
				}
			],
			"group": "build",
			"label": "quarkus:dev (src/Engine)",
			"command": "./mvnw quarkus:dev ",
			"windows": {
				"command": ".\\mvnw.cmd quarkus:dev "
			},
			"options": {
				"cwd": "src/Engine"
			}
		},
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\b\\B",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true
					}
				}
			],
			"group": "build",
			"label": "package -Pnative (src/Engine)",
			"command": "./mvnw package -Pnative ",
			"windows": {
				"command": ".\\mvnw.cmd package -Pnative "
			},
			"options": {
				"cwd": "src/Engine"
			}
		},
		{
			"appId": "engine",
			"appPort": 8080,
			"label": "daprd-debug",
			"type": "daprd",
			"dependsOn": "quarkus:dev (src/Engine)",
			"componentsPath": "./components"
		},
		{
			"appId": "engine",
			"label": "daprd-down",
			"type": "daprd-down"
		},
		{
			"appId": "engine",
			"appPort": 8080,
			"label": "daprd-local-debug",
			"type": "daprd",
			"dependsOn": "quarkus:dev (src/Engine)",
			"componentsPath": "./components-local"
		},
		{
			"appId": "engine",
			"label": "daprd-local-down",
			"type": "daprd-down"
		}
	]
}